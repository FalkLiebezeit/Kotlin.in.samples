<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Formatvorlagen des Projekts-->
    <style name="Text">
        <item name="android:background">@color/rot</item>
        <item name="android:textColor">@color/weiss</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
    </style>

        <!--Von Text abgeleitete Formatvorlagen des Projekts.-->
    <style name="EingabeText" parent = "Text" >
        <item name="android:background">@drawable/hintergrund</item>
        <item name="android:textColor">@color/schwarz</item>
    </style>
    <style name="AusgabeText" parent = "Text">
        <item name="android:background">@color/rotTon</item>
    </style>

    <style name="InfoText" parent = "Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button" parent = "Text">
        <item name="android:background">@color/buttonGrau</item>
        <item name="android:textColor">@color/rot</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
